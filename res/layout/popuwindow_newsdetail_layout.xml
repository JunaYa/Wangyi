<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10sp">
<LinearLayout 
    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentRight="true"
   >
    
    <LinearLayout 
        android:layout_marginTop="10sp"
        android:id="@+id/r_news_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:clickable="true"
        android:orientation="horizontal"
        android:background="@drawable/pc_click_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_news_newspage_share_icon"
            android:layout_margin="12sp"
            />
        <TextView
            android:layout_margin="12sp"
	        android:id="@+id/tv_flow_share" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="分享"
	        android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/r_news_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal"
        android:background="@drawable/pc_click_bg">
        <ImageView
            android:id="@+id/iv_news_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_news_newspage_un_collect_icon"
            android:layout_margin="12sp"/>
        <CheckBox
	        android:id="@+id/tv_flow_collect" 
            android:layout_margin="12sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="收藏"
	        android:textSize="14sp"
	        android:button="@null"
	        android:textColor="@color/black"/>
    </LinearLayout>
	<LinearLayout 
        android:id="@+id/r_news_screenshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/pc_click_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_news_newspage_screenshot_icon"
            android:layout_margin="12sp"/>
        <TextView
            android:layout_margin="12sp"
	        android:id="@+id/tv_flow_screenshot" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="态度截屏"
	        android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/r_news_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/pc_click_bg">
        <ImageView
            android:layout_margin="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_news_newspage_font_icon"
           />
        <TextView
            android:layout_margin="12sp"
	        android:id="@+id/tv_flow_font" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="正文字号"
	        android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>